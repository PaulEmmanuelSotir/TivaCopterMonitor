					<CompositeTransform ScaleX="4" ScaleY="4"/>
				</Grid.RenderTransform>

				<Grid.RowDefinitions>
					<RowDefinition Height="2*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

